<div class="container">
    <div class="row">
        <div class="col user-page-links-btns">
            <a href="{{user.username}}/reviews" class="btn btn-primary">See this user's reviews</a>
            <a href="{{user.username}}/glog" class="btn btn-primary">See this user's grow log</a>
            <a href="/trades/initiate/{{user._id}}" class="btn btn-primary">Initiate a trade with this user</a>
        </div>
    </div>
</div>

<div class="container">
    <div class="row">
        <div class="col">
            <div class="card">
                <div class="card-body">
                    <h1 tabindex="0">{{user.username}}</h1>
                    <div class="user-info">
                        <p>Sending from {{user.countryCode}}</p>
                        {{#if user.discord}}
                            <p>Discord: {{user.discord}}</p>
                        {{/if}}
                        {{#if user.phone}}
                            <p>Phone Number: {{user.phone}}</p>
                        {{/if}}
                        {{#if user.email}}
                            <p>Email Address: {{user.email}}</p>
                        {{/if}}
                    </div>
                    {{#if user.displayWishlist}}
                        <h3>Wishlist:</h3>
                        <ol>
                            {{#each user.wishlist}}
                            <li>{{this}}</li>
                            {{/each}}
                        </ol>
                    {{/if}}

                </div>
            </div> 
        </div>
    </div>
</div>



<div class="container">
    <div class="row">
        <div class="col">
            <div class="card">
                <div class="card-body">
                    <div class="comments-section">
                        <form action="/comments" method="POST">
                            <div class="form-group">
                                <label for="comment">Add a comment:</label>
                                <textarea class="form-control" id="comment" name="comment" rows="3"></textarea>
                            </div>
                            <button type="submit" class="btn btn-primary">Submit</button>
                        </form>
                        <h3>Comments:</h3>
                        {{#each user.profileComments}}
                            <div class="comment-container">
                                <h4>{{this.commenterUsername}}</h4>
                                <p>{{this.text}}</p>
                            </div>
                        {{/each}}
                    </div>

                </div>
            </div> 
        </div>
    </div>
</div>
